<h1>Sign up</h1>

<% if @user.errors().any?() %>
	<% @user.errors().full_messages().each() do |error| %>
		<%= error %>

	<% end %>

<% end %>

<%= form_for(@user) do |f| %>
	<%= f.label(:username,"Username:") %> <%= f.text_field :username%>
	<%= f.label(:password, "Password:") %> <%= f.password_field :password%>
	Confirm: <%= f.password_field(:password_confirmation) %>
	<%= f.submit %>
<% end %>
