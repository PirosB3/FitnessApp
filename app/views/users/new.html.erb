<h1>Sign up</h1>

<% if @user.errors().any?() %>
	<% @user.errors().full_messages.each %>
	<%= "Sorry your username must be over 3 characters long" %>

<% end %>

<%= form_for(@user) do |f| %>
	Username: <%= f.text_field :username%>
	Password: <%= f.password_field :password%>
	<%= f.submit %>
<% end %>
